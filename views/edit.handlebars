<div class="review-edit-container">
    <h2>Edit Review for {{review.mediaTitle}}</h2>
    
    <form action="/reviews/{{review._id}}/edit" method="POST" class="review-form">
        <div class="form-group">
            <label for="text">Review:</label>
            <textarea 
                id="text" 
                name="text" 
                required 
                minlength="10"
            >{{review.text}}</textarea>
        </div>
        
        <div class="form-group">
            <label for="rating">Rating (1-5):</label>
            <input 
                type="number" 
                id="rating" 
                name="rating" 
                min="1" 
                max="5" 
                value="{{review.rating}}" 
                required
            >
        </div>
        
        <div class="button-group">
            <button type="submit" class="submit-btn">Update Review</button>
            <a href="/reviews/user/{{userId}}" class="cancel-btn">Cancel</a>
        </div>
    </form>
</div>
